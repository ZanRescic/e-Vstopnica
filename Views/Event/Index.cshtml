@model IEnumerable<e_Vstopnice.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Prihajajoči dogodki</h1>

<p>
    <a asp-action="Create">Ustvari dogodek</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlaceId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Podrobnosti</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Izbriši dogodek</a> |
                <a asp-action="Create" asp-controller="ticket" asp-route-id="@item.Id">Vstopnice</a>
            </td>
        </tr>
}
    </tbody>
</table>
